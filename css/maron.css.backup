/* ========================================
   MARON Real Estate Group - Main Stylesheet
   ======================================== */

/* ========================================
   CSS VARIABLES
   ======================================== */
:root {
    --primary-color: rgba(204, 85, 0, 1);
    /* Burnt Orange */
    --primary-light: rgba(204, 85, 0, 0.8);
    --primary-dark: rgba(153, 64, 0, 1);
    --secondary-color: #000000;
    --text-color: #595959;
    --text-light: #ffffff;
    --bg-light: #f8f9fa;
    --bg-white: #ffffff;
    --border-color: #c7c7c7;
    --transition-speed: 0.3s;
    --box-shadow: 0px 0px 11px 0px rgba(0, 0, 0, 0.1);
}

/* ========================================
   RESET & BASE STYLES
   ======================================== */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
        "Helvetica Neue", Arial, sans-serif;
    color: var(--text-color);
    line-height: 1.6;
    overflow-x: hidden;
}

img {
    max-width: 100%;
    height: auto;
    display: block;
}

a {
    text-decoration: none;
    color: inherit;
    transition: all var(--transition-speed) ease;
}

button {
    cursor: pointer;
    border: none;
    font-family: inherit;
    transition: all var(--transition-speed) ease;
}

button:focus,
a:focus,
input:focus,
textarea:focus {
    outline: 2px solid var(--primary-color);
    outline-offset: 2px;
}

/* ========================================
   NAVIGATION BAR (Transparent with scroll effect)
   ======================================== */
.navbar {
    padding: 15px 15px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: transparent;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100;
    height: 12vh;
    transition: background-color 0.3s ease, box-shadow 0.3s ease;
}

.navbar.scrolled {
    background-color: var(--bg-white);
    box-shadow: var(--box-shadow);
}

.logo {
    display: flex;
    align-items: center;
    font-weight: 700;
    margin: 0;
}

.logo i {
    font-size: 50px;
    color: var(--primary-color);
    margin-right: 20px;
}

.logo span {
    font-size: 50px;
    text-transform: uppercase;
    letter-spacing: 0.3rem;
    color: var(--text-light);
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    transition: color 0.3s ease, text-shadow 0.3s ease;
}

.navbar.scrolled .logo span {
    color: var(--secondary-color);
    text-shadow: none;
}

.links {
    display: flex;
    align-items: center;
    gap: 25px;
}

.links a {
    color: var(--text-light);
    text-transform: uppercase;
    font-size: 14px;
    font-weight: 600;
    position: relative;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);
    transition: color 0.3s ease, text-shadow 0.3s ease;
}

.navbar.scrolled .links a {
    color: var(--primary-color);
    text-shadow: none;
}

.links a::after {
    content: "";
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: currentColor;
    transition: width var(--transition-speed) ease;
}

.links a:hover::after {
    width: 100%;
}

.links a:hover {
    opacity: 0.8;
}

.links i {
    color: var(--text-light);
    font-size: 18px;
    cursor: pointer;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);
    transition: transform var(--transition-speed) ease, color 0.3s ease, text-shadow 0.3s ease;
}

.navbar.scrolled .links i {
    color: var(--primary-color);
    text-shadow: none;
}

.links i:hover {
    transform: scale(1.2);
    opacity: 0.8;
}

.menu-btn {
    display: none;
    font-size: 28px;
    cursor: pointer;
    color: var(--text-light);
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);
    transition: color 0.3s ease, text-shadow 0.3s ease;
}

.navbar.scrolled .menu-btn {
    color: var(--primary-color);
    text-shadow: none;
}

/* ========================================
   CAROUSEL
   ======================================== */
.carousel-item img {
    width: 100%;
    height: 100vh;
    object-fit: cover;
}

.carousel-caption {
    background-color: rgba(0, 0, 0, 0.5);
    padding: 30px;
    border-radius: 10px;
}

.carousel-caption h1 {
    color: var(--primary-color);
    font-weight: 1000;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
}

.carousel-caption button {
    transition: all var(--transition-speed) ease;
}

.carousel-caption button:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
}

/* ========================================
   HOME PAGE - HERO SECTION
   ======================================== */
.hero {
    padding: 40px 20px;
}

.houses {
    max-width: 1400px;
    margin: 0 auto;
}

.house.design {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    margin-bottom: 60px;
    align-items: center;
}

.cont {
    padding: 30px;
}

.cont img {
    width: 100%;
    height: 500px;
    object-fit: cover;
    border-radius: 10px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: transform var(--transition-speed) ease;
}

.cont img:hover {
    transform: scale(1.02);
}

.desc h4 {
    font-size: 32px;
    color: var(--secondary-color);
    margin-bottom: 10px;
}

.desc h6 {
    font-size: 14px;
    color: var(--primary-color);
    letter-spacing: 2px;
    margin-bottom: 20px;
    font-weight: 600;
}

.desc p {
    color: var(--text-color);
    margin-bottom: 25px;
    line-height: 1.8;
    font-family: "Times New Roman", Times, serif;
}

.desc button {
    padding: 15px 25px;
    color: var(--secondary-color);
    background-color: var(--primary-color);
    border: none;
    border-radius: 50px;
    font-weight: 600;
    letter-spacing: 1px;
}

.desc button:hover {
    background-color: var(--primary-dark);
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(204, 85, 0, 0.3);
}

/* ========================================
   CONTACT FORM SECTION
   ======================================== */
.contact {
    background-color: var(--primary-color);
    padding: 50px;
    border-radius: 10px;
    margin: 40px 20px;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
}

.contact h2 {
    font-size: 32px;
    text-align: center;
    margin-bottom: 10px;
    color: var(--secondary-color);
}

.contact p {
    font-size: 20px;
    text-align: center;
    margin-bottom: 30px;
    color: var(--secondary-color);
}

.contact form {
    max-width: 800px;
    margin: 0 auto;
}

.contact label {
    display: block;
    margin-bottom: 8px;
    color: var(--secondary-color);
    font-weight: 600;
    font-size: 14px;
}

.contact input,
.contact textarea {
    width: 100%;
    padding: 12px 15px;
    border: 1px solid var(--border-color);
    border-radius: 5px;
    font-family: inherit;
    font-size: 14px;
    margin-bottom: 20px;
    transition: border-color var(--transition-speed) ease;
}

.contact input:focus,
.contact textarea:focus {
    border-color: var(--secondary-color);
}

.names,
.details {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 35px;
}

.contact textarea {
    height: 150px;
    resize: vertical;
}

.button {
    text-align: right;
    margin-top: 20px;
}

.contact button,
.button button {
    background-color: var(--secondary-color);
    color: var(--text-light);
    padding: 15px 35px;
    letter-spacing: 2px;
    border-radius: 50px;
    font-weight: 600;
    text-transform: uppercase;
}

.contact button:hover,
.button button:hover {
    background-color: #333;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
}

/* ========================================
   FOOTER
   ======================================== */
.footer {
    background-color: var(--secondary-color);
    color: var(--text-light);
}

.footer1 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    text-align: center;
    max-width: 100%;
}

.fname {
    font-size: 24px;
    font-weight: 600;
    padding: 20px;
}

.fcont {
    padding: 10px;
    text-align: left;
    width: auto;
}

.fcont p {
    color: var(--text-light);
    margin-bottom: 15px;
    display: flex;
    align-items: center;
    gap: 10px;
}

.fcont i {
    color: var(--primary-color);
    width: 20px;
}

.icons {
    display: flex;
    justify-content: center;
    gap: 20px;
    padding: 15px 0;
}

.icons i {
    font-size: 24px;
    color: var(--primary-color);
    cursor: pointer;
    transition: all var(--transition-speed) ease;
}

.icons i:hover {
    color: var(--primary-light);
    transform: translateY(-3px);
}

.footer>div {
    text-align: center;
    color: var(--text-light);
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    font-size: 14px;
    clear: both;
}

.copyright {
    padding: 5px 0;
    font-size: 10px;
    font-style: italic;
}

/* ========================================
   ABOUT PAGE
   ======================================== */
.intro {
    width: 100%;
    height: 100vh;
    position: relative;
}

.intro img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.intro .c-desc {
    position: absolute;
    top: 70%;
    left: 10%;
    color: var(--text-light);
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
}

.intro .c-desc h1 {
    font-size: 48px;
    color: var(--primary-color);
    margin-bottom: 10px;
}

.intro .c-desc h3 {
    font-size: 28px;
}

.overview {
    margin: 50px 30px;
    padding: 25px;
}

.cont {
    text-align: center;
    padding: 15px;
    font-size: 32px;
    color: var(--secondary-color);
}

.mcont {
    padding: 15px;
    color: var(--text-color);
    font-size: 19px;
    font-family: "Times New Roman", Times, serif;
    line-height: 1.8;
    max-width: 1200px;
    margin: 0 auto;
}

.amenities {
    margin: 50px 10px;
    padding: 15px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    align-items: center;
}

.aimage {
    width: 100%;
    height: 600px;
}

.aimage img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 10px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
}

.bamen {
    font-size: 30px;
    padding: 25px;
}

.bamen h2 {
    color: var(--secondary-color);
    margin-bottom: 20px;
}

.bamen p {
    padding: 8px 0;
    color: var(--text-color);
    font-size: 18px;
    position: relative;
    padding-left: 25px;
}

.bamen p::before {
    content: "âœ“";
    position: absolute;
    left: 0;
    color: var(--primary-color);
    font-weight: bold;
}

/* ========================================
   CONTACT PAGE - AGENTS SECTION
   ======================================== */
.agents {
    display: grid;
    grid-template-columns: 1fr 1fr;
    padding: 40px 20px;
    gap: 40px;
    align-items: center;
    margin-top: 20vh;
}

.agent {
    width: 100%;
    padding: 20px;
}

.agent img {
    width: 100%;
    height: 500px;
    object-fit: cover;
    border-radius: 10px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
}

.agent.info {
    text-align: center;
    padding: 50px;
}

.info h1 {
    font-size: 42px;
    color: var(--secondary-color);
    margin-bottom: 30px;
    line-height: 1.3;
}

.info p {
    font-size: 18px;
    color: var(--text-color);
    line-height: 1.8;
    margin-bottom: 30px;
}

.info button {
    background-color: var(--primary-color);
    color: var(--secondary-color);
    padding: 15px 35px;
    letter-spacing: 2px;
    border-radius: 50px;
    font-weight: 600;
    text-transform: uppercase;
}

.info button:hover {
    background-color: var(--primary-dark);
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(204, 85, 0, 0.3);
}

/* ========================================
   GALLERY PAGE
   ======================================== */
.g-hero {
    min-height: 100vh;
}

.images {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    margin: 40px 20px;
    padding: 20px;
}

.image {
    width: 100%;
    overflow: hidden;
    border-radius: 10px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
}

.image img {
    height: 500px;
    width: 100%;
    object-fit: cover;
    transition: transform var(--transition-speed) ease;
}

.image:hover img {
    transform: scale(1.05);
}

/* ========================================
   UTILITIES
   ======================================== */
.fade-in {
    animation: fadeIn 0.6s ease-in;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* ========================================
   RESPONSIVE DESIGN
   ======================================== */

/* Tablet */
@media (max-width: 1024px) {

    .logo i,
    .logo span {
        font-size: 40px;
    }

    .house.design,
    .amenities {
        grid-template-columns: 1fr;
        gap: 30px;
    }

    .carousel-item img {
        height: 100vh;
    }
}

/* Mobile */
@media (max-width: 600px) {

    /* Navigation */
    .navbar {
        padding: 10px 15px;
        height: auto;
    }

    .menu-btn {
        display: flex;
        font-size: 24px;
    }

    .links {
        display: none;
        position: absolute;
        top: 100%;
        left: 0;
        width: 100%;
        flex-direction: column;
        background-color: var(--bg-white);
        box-shadow: var(--box-shadow);
        padding: 20px;
        gap: 15px;
    }

    .links.showlinks {
        display: flex;
    }

    .links a {
        display: block;
        padding: 12px 15px;
        border-bottom: 1px solid var(--border-color);
        width: 100%;
        text-align: center;
        color: var(--primary-color) !important;
        text-shadow: none !important;
    }

    .links a::after {
        display: none;
    }

    .links i {
        display: inline-block;
        color: var(--primary-color) !important;
        text-shadow: none !important;
    }

    .logo i,
    .logo span {
        font-size: 32px;
    }

    .logo i {
        margin-right: 10px;
    }

    /* Carousel */
    .carousel-item img {
        height: 100vh;
    }

    .carousel-caption {
        padding: 15px;
    }

    .carousel-caption h1 {
        font-size: 24px;
    }

    .carousel-caption button {
        padding: 8px 15px;
        font-size: 14px;
    }

    /* Home Page */
    .hero {
        padding: 20px 10px;
    }

    .house.design {
        grid-template-columns: 1fr;
        gap: 20px;
        margin-bottom: 40px;
    }

    .cont {
        padding: 15px;
    }

    .cont img {
        height: 300px;
    }

    .desc h4 {
        font-size: 24px;
    }

    .desc h6 {
        font-size: 12px;
    }

    .desc p {
        font-size: 16px;
    }

    /* Contact Form */
    .contact {
        padding: 30px 20px;
        margin: 20px 10px;
    }

    .contact h2 {
        font-size: 24px;
    }

    .contact p {
        font-size: 16px;
    }

    .names,
    .details {
        grid-template-columns: 1fr;
        gap: 0;
    }

    .contact textarea {
        height: 120px;
    }

    .button {
        text-align: center;
    }

    /* About Page */
    .intro {
        height: 100vh;
    }

    .intro .c-desc {
        top: 50%;
        left: 5%;
    }

    .intro .c-desc h1 {
        font-size: 28px;
    }

    .intro .c-desc h3 {
        font-size: 18px;
    }

    .overview {
        margin: 20px 10px;
        padding: 10px;
    }

    .cont {
        font-size: 24px;
    }

    .mcont {
        font-size: 16px;
        padding: 10px;
    }

    .amenities {
        grid-template-columns: 1fr;
        margin: 20px 10px;
        gap: 20px;
    }

    .aimage {
        height: 300px;
    }

    .bamen {
        font-size: 20px;
        padding: 15px;
    }

    .bamen p {
        font-size: 16px;
    }

    /* Contact Page - Agents */
    .agents {
        grid-template-columns: 1fr;
        padding: 20px 10px;
        gap: 20px;
        margin-top: 10vh;
    }

    .agent {
        padding: 10px;
    }

    .agent img {
        height: 300px;
    }

    .agent.info {
        padding: 20px;
    }

    .info h1 {
        font-size: 28px;
        margin-bottom: 20px;
    }

    .info p {
        font-size: 16px;
        margin-bottom: 20px;
    }

    /* Gallery */
    .images {
        grid-template-columns: 1fr;
        gap: 15px;
        margin: 20px 10px;
        padding: 10px;
    }

    .image img {
        height: 300px;
    }

    /* Footer */
    .footer1 {
        grid-template-columns: 1fr;
        gap: 20px;
        margin-bottom: 20px;
    }

    .fname {
        font-size: 18px;
        padding: 10px;
    }

    .fcont {
        padding: 10px;
    }

    .fcont p {
        font-size: 14px;
        margin-bottom: 10px;
    }

    .icons {
        gap: 15px;
    }

    .icons i {
        font-size: 20px;
    }

    .footer>div {
        font-size: 12px;
    }
}